$color1: #737373

.autenticar-microsoft
    background-color: white
    border-radius: 4px
    border: 1px solid color($color1 a(40%))
    color: $color1
    font-size: 16px
    height: 40px
    line-height: 40px
    padding: 0
    width: 100%
    text-transform: uppercase
    font-weight: bold
    margin-bottom: 16px

.autenticar-microsoft img
    height: 22px
    padding: 8px
    float: left
